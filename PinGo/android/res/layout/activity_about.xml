<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <include
		android:id="@+id/common_top"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		layout="@layout/common_top"/>
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/common_top"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <ImageView
        android:layout_width="64.0dip"
        android:layout_height="64.0dip"
        android:layout_gravity="center"
        android:layout_marginTop="43.0dip"
        android:contentDescription="@null"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15.0dip"
        android:text="@string/app_name"
        android:textColor="@color/font_color_secondary" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="43.0dip"
        android:background="@color/divide_line" />

    <RelativeLayout
        android:id="@+id/rl_introduction"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_list_selector"
        android:clickable="true"
        android:onClick="onIntroduction"
        android:padding="@dimen/margin_medium" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="软件介绍"
            android:textColor="@color/font_color_primary"
            android:textSize="@dimen/font_size_medium" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_guide"
            android:contentDescription="@null" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/divide_line" />

    <RelativeLayout
        android:id="@+id/rl_agreement"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_list_selector"
        android:clickable="true"
        android:onClick="onAgreement"
        android:padding="@dimen/margin_medium" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="用户协议"
            android:textColor="@color/font_color_primary"
            android:textSize="@dimen/font_size_medium" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_guide"
            android:contentDescription="@null" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/divide_line" />

    <RelativeLayout
        android:id="@+id/about_contact_us_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_list_selector"
        android:clickable="true"
        android:padding="@dimen/margin_medium" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="联系我们 : bjlchust2014@163.com" 
            android:textColor="@color/font_color_primary"
            android:textSize="@dimen/font_size_medium" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_xxlarge"
        android:gravity="center"
        android:text="Copyright 2014-20120 baijinglianchuang All rights reserved."
        android:textColor="@color/font_color_secondary"
        android:textSize="@dimen/font_size_small" />
</LinearLayout>
	<ImageView
        android:id="@+id/iv_main_bg2"
	    android:layout_width="fill_parent"
	    android:layout_height="10dp"
	    android:layout_below="@id/common_top"
	    android:background="@drawable/activity_main_bg_top2"/>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_second_cat_good"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
	    android:id="@+id/rl_get_more_goods_1"
 	    android:layout_width="wrap_content" 
	  	android:layout_height="wrap_content"
	  	android:gravity="center_vertical"
	  	android:padding="10dp">
	  	<TextView 
             android:id="@+id/tv_goodcat_name"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:gravity="center_vertical"
             android:text="休闲零食"
             android:textSize="15dip"
             android:textColor="@color/text_color"/>
		<ImageView
	  	    android:id="@+id/more_goods"
		    android:layout_width="10dp"
		    android:layout_height="10dp"
		    android:gravity="center_vertical"
		    android:layout_marginTop="8dp"
		    android:layout_alignParentRight="true"
		    android:background="@drawable/activity_main_more"/>
  		<TextView 
             android:id="@+id/tv_get_more_goods"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:gravity="center_vertical"
             android:layout_marginTop="3dip"
             android:layout_toLeftOf="@id/more_goods"
             android:text="更多商品"
	  		 android:clickable="true"
	  		 android:onClick="getMoreGoods"
             android:textSize="13dip"
             android:textColor="#f9784b"/>
 	</RelativeLayout>
   	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		<include
			android:id="@+id/include_item_good0"
			layout="@layout/common_item_good_one"/>
        <include 
            android:id="@+id/include_item_good1"
            layout="@layout/common_item_good_one"/>
        <include 
            android:id="@+id/include_item_good2"
            layout="@layout/common_item_good_one"/>
 	</LinearLayout>
   	<LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
        <include 
            android:id="@+id/include_item_good3"
            layout="@layout/common_item_good_one"/>
        <include 
            android:id="@+id/include_item_good4"
            layout="@layout/common_item_good_one"/>
        <include 
            android:id="@+id/include_item_good5"
            layout="@layout/common_item_good_one"/>
	</LinearLayout>
	<View
	    android:layout_width="fill_parent"
	    android:layout_height="10dip"
	    android:background="@color/divide_line"/>
</LinearLayout>
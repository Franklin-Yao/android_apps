<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/main_top_search"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:background="@drawable/activity_main_bg_top1"
        android:orientation="horizontal" >
		<ImageView
	        android:id="@+id/iv_search_cancel"
	        android:layout_width="15dp"
	        android:layout_height="30dp"
	        android:clickable="true" 
	        android:layout_marginTop="13dp"
	        android:background="@drawable/back" />
        <EditText
            android:id="@+id/et_search_submit"
            android:layout_marginLeft="15dp"
            android:layout_width="130dp"
            android:layout_height="35dp"
            android:layout_weight="1"
           	android:layout_marginTop="10dp"
            android:background="@drawable/bg_common_round_white"
            android:drawableRight="@drawable/activity_main_search"
            android:gravity="center"
            android:textSize="10dp"
            android:hint="搜索" >
        </EditText>

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:layout_marginTop="13dp"
            android:textColor="@color/add_text"
            android:textSize="20dp"
            android:text="搜索" />
    </LinearLayout>
</RelativeLayout>
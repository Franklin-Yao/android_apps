<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray">
    <include
		android:id="@+id/common_top"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		layout="@layout/common_top"/>
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/common_top"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/divide_line" />

    <RelativeLayout
        android:id="@+id/profile_username_view"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:background="@color/bg_main_light"
        android:clickable="true" >

        <TextView
            android:id="@+id/profile_username_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/margin_medium"
            android:text="手机号："
            android:textColor="@color/font_color_primary"
            android:textSize="@dimen/font_size_large" />

        <TextView
            android:id="@+id/profile_info_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text=""
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_toRightOf="@id/profile_username_title"
            android:textColor="@color/font_color_primary"
            android:textSize="@dimen/font_size_large" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/divide_line" />

    <RelativeLayout
        android:id="@+id/profile_nickname_view"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/bg_main_light">

        <TextView
            android:id="@+id/profile_nickname_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:padding="@dimen/margin_medium"
            android:text="用户名："
            android:textColor="@color/font_color_primary"
            android:textSize="@dimen/font_size_large" />

        <TextView
            android:id="@+id/profile_info_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text=""
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_toRightOf="@id/profile_nickname_title"
            android:textColor="@color/font_color_primary"
            android:textSize="@dimen/font_size_large" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/divide_line" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="32.0dip"
        android:background="@color/divide_line" />

    <RelativeLayout
        android:id="@+id/profile_logout_view"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_white_list_selector"
        android:clickable="true"
        android:onClick="logout" >

        <TextView
            android:id="@+id/profile_logout_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="@dimen/margin_medium"
            android:text="退出登录"
            android:textColor="@color/font_color_primary"
            android:textSize="@dimen/font_size_large" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/divide_line" />
	</LinearLayout>
	<ImageView
        android:id="@+id/iv_main_bg2"
	    android:layout_width="fill_parent"
	    android:layout_height="10dp"
	    android:layout_below="@id/common_top"
	    android:background="@drawable/activity_main_bg_top2"/>
</RelativeLayout>
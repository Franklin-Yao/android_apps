<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_login_bg">
    <include
		android:id="@+id/common_top"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		layout="@layout/common_top"/>
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_below="@id/common_top"
	    android:gravity="center_horizontal"
	    android:orientation="vertical" >
	    <ImageView
	        android:id="@+id/iv_login_welcom"
		    android:layout_width="200dp"
		    android:layout_height="30dp"
		    android:layout_marginTop="25dp"
		    android:background="@drawable/activity_login_welcome"/>
	    <ImageView
	        android:id="@+id/iv_login_logo"
		    android:layout_width="80dp"
		    android:layout_height="80dp"
		    android:layout_marginTop="25dp"
		    android:background="@drawable/activity_login_logo"/>

	    <LinearLayout
	        android:id="@+id/ll_user"
	        android:layout_width="300dp"
	        android:layout_height="50dp"
	        android:layout_marginTop="25dp"
	        android:orientation="horizontal" 
	        android:gravity="center"
	        android:background="@drawable/bg_common_round_white_nopadding" >

	        <ImageView
	            android:layout_width="30dp"
	            android:layout_height="30dp"
	            android:layout_marginLeft="14dp"
	            android:background="@drawable/activity_login_user" />

	        <EditText
	            android:id="@+id/et_user"
	            android:layout_width="fill_parent"
	            android:layout_height="match_parent"
	            android:layout_marginLeft="17dp"
	            android:layout_marginRight="20dp"
	            android:layout_marginTop="3dp"
	            android:layout_weight="0.25"
	            android:hint="请输入手机号码"
	            android:inputType="phone"
	            android:background="@null"
	            android:padding="14dp"
	            android:singleLine="true"
	            android:textColor="#000"
	            android:textSize="15sp" />
	    </LinearLayout>

		<LinearLayout
	        android:id="@+id/ll_user"
	        android:layout_width="300dp"
	        android:layout_height="50dp"
	        android:layout_marginTop="25dp"
	        android:orientation="horizontal" 
	        android:gravity="center"
	        android:background="@drawable/bg_common_round_white_nopadding" >

	        <ImageView
	            android:layout_width="30dp"
	            android:layout_height="30dp"
	            android:layout_marginLeft="14dp"
	            android:background="@drawable/activity_login_pass" />

	        <EditText
	            android:id="@+id/et_pass"
	            android:layout_width="fill_parent"
	            android:inputType="textPassword"
	            android:layout_height="match_parent"
	            android:layout_marginLeft="17dp"
	            android:layout_marginRight="20dp"
	            android:layout_marginTop="3dp"
	            android:layout_weight="0.25"
	            android:hint="请输入密码"
	            android:background="@null"
	            android:padding="14dp"
	            android:singleLine="true"
	            android:textColor="#000"
	            android:textSize="15sp" />
	    </LinearLayout>
	    <TextView
           android:id="@+id/tv_good_name"
           android:clickable="true"
           android:onClick="onResetPass"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="15dp"
           android:layout_marginLeft="100dp"
           android:text="忘记密码"
           android:textColor="@color/black"
           android:textSize="18dp" />
	    <View
           android:layout_width="70dp"
           android:layout_height="1dp"
           android:layout_marginLeft="100dp"
           android:background="@color/black"/>
	    <Button
	        android:id="@+id/login_login_btn"
	        android:layout_width="140dp"
	        android:layout_height="40dp"
	         android:layout_marginLeft="20dp"
		    android:layout_marginRight="20dp"
		    android:layout_marginTop="56dp"
	        android:background="@drawable/bg_common_round_blue_5"
	        android:onClick="login"
	        android:text="登陆"
	        android:textColor="#ffffff"
	        android:textSize="18sp" />
		<Button
	        android:id="@+id/login_register_btn"
	        android:layout_width="140dp"
	        android:layout_height="40dp"
	         android:layout_marginLeft="20dp"
		    android:layout_marginRight="20dp"
		    android:layout_marginTop="23dp"
		    android:alpha="1"
	        android:background="@drawable/bg_common_round_blue_line"
	        android:onClick="register"
	        android:text="注册"
	        android:textColor="@color/text_color_selected"
	        android:textSize="18sp" />
		</LinearLayout>
	<ImageView
        android:id="@+id/iv_main_bg2"
	    android:layout_width="fill_parent"
	    android:layout_height="10dp"
	    android:layout_below="@id/common_top"
	    android:background="@drawable/activity_main_bg_top2"/>
</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
     >
    <RelativeLayout
        android:id="@+id/show_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/menu_bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/activity_main_bg_bottom"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/view_tab_home"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/tab_home"
                android:layout_marginTop="-4dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/activity_main_home_selected" />

            <TextView
                android:id="@+id/tv_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页"
                android:textColor="@color/text_color_selected"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_tab_cart"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:layout_marginLeft="0dp"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/tab_cart"
                android:layout_marginTop="5dp"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:src="@drawable/activity_main_cart" />

            <TextView
                android:id="@+id/tv_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="购物车"
                android:textColor="@color/text_color"
                android:textSize="11sp" />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/view_tab_user"
            android:layout_width="0dp"
             android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/tab_user"
               android:layout_marginTop="-4dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/activity_main_user" />

            <TextView
                android:id="@+id/tv_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人"
                android:textColor="@color/text_color"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_login_bg">
    <include
		android:id="@+id/common_top"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		layout="@layout/common_top"/>
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_below="@id/common_top"
	    android:gravity="center_horizontal"
	    android:orientation="vertical" >
	    <ImageView
	        android:id="@+id/iv_login_welcom"
		    android:layout_width="200dp"
		    android:layout_height="30dp"
		    android:layout_marginTop="25dp"
		    android:background="@drawable/activity_login_welcome"/>
	    <ImageView
	        android:id="@+id/iv_login_logo"
		    android:layout_width="80dp"
		    android:layout_height="80dp"
		    android:layout_marginTop="25dp"
		    android:background="@drawable/activity_login_logo"/>

	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal"
	        android:layout_marginTop="30dp"
	        android:orientation="horizontal" >
"
		    <Button
			    android:id="@+id/btn_register_sex_male"
			    android:layout_width="90dp"
			    android:layout_height="40dp"
			    android:background="@drawable/bg_common_round_blue_15"
			    android:onClick="registerSexMale"
			    android:text="男"
			    android:textSize="18sp" />

			<Button
			    android:id="@+id/btn_register_sex_female"
			    android:layout_width="90dp"
			    android:layout_height="40dp"
			    android:layout_marginLeft="24dp"
			    android:background="@drawable/bg_common_round_white_nopadding"
			    android:onClick="registerSexFemale"
			    android:text="女"
			    android:textSize="18sp" />
		</LinearLayout>
	    <LinearLayout
	        android:id="@+id/ll_user"
	        android:layout_width="300dp"
	        android:layout_height="50dp"
	        android:layout_marginTop="20dp"
	        android:orientation="horizontal" 
	        android:gravity="center"
	        android:background="@drawable/bg_common_round_white_nopadding" >

	        <ImageView
	            android:layout_width="30dp"
	            android:layout_height="30dp"
	            android:layout_marginLeft="14dp"
	            android:background="@drawable/activity_login_user" />

	        <EditText
	            android:id="@+id/et_user"
	            android:layout_width="fill_parent"
	            android:layout_height="match_parent"
	            android:layout_marginLeft="17dp"
	            android:layout_marginRight="20dp"
	            android:layout_marginTop="3dp"
	            android:layout_weight="0.25"
	            android:hint="请设置昵称"
	            android:background="@null"
	            android:padding="14dp"
	            android:singleLine="true"
	            android:textColor="#000"
	            android:textSize="15sp" />
	    </LinearLayout>

		<LinearLayout
	        android:id="@+id/ll_user"
	        android:layout_width="300dp"
	        android:layout_height="50dp"
	        android:layout_marginTop="15dp"
	        android:orientation="horizontal" 
	        android:gravity="center"
	        android:background="@drawable/bg_common_round_white_nopadding" >

	        <ImageView
	            android:layout_width="30dp"
	            android:layout_height="30dp"
	            android:layout_marginLeft="14dp"
	            android:background="@drawable/activity_login_pass" />

	        <EditText
	            android:id="@+id/et_pass"
	            android:layout_width="fill_parent"
	            android:inputType="textPassword"
	            android:layout_height="match_parent"
	            android:layout_marginLeft="17dp"
	            android:layout_marginRight="20dp"
	            android:layout_marginTop="3dp"
	            android:layout_weight="0.25"
	            android:hint="请输入密码"
	            android:background="@null"
	            android:padding="14dp"
	            android:singleLine="true"
	            android:textColor="#000"
	            android:textSize="15sp" />
	        <ImageView
	            android:id="@+id/iv_pass_see"
	            android:layout_marginRight="10dp"
	            android:layout_width="60dp"
	            android:layout_height="60dp"
	            android:onClick="onPassSee"
	            android:clickable="true"
	            android:background="@drawable/activity_login_eye" />
	    </LinearLayout>
	    
	    <Button
	        android:id="@+id/btn_register"
	        android:layout_width="140dp"
	        android:layout_height="40dp"
	         android:layout_marginLeft="20dp"
		    android:layout_marginRight="20dp"
		    android:layout_marginTop="56dp"
	        android:background="@drawable/bg_common_round_blue_5"
	        android:onClick="onRegister"
	        android:text="注册"
	        android:textColor="#ffffff"
	        android:textSize="18sp" />
		<Button
	        android:id="@+id/btn_login"
	        android:layout_width="140dp"
	        android:layout_height="40dp"
	         android:layout_marginLeft="20dp"
		    android:layout_marginRight="20dp"
		    android:layout_marginTop="23dp"
		    android:alpha="1"
	        android:background="@drawable/bg_common_round_blue_line"
	        android:onClick="onLogin"
	        android:text="登录"
	        android:textColor="@color/text_color_selected"
	        android:textSize="18sp" />
		</LinearLayout>
	<ImageView
        android:id="@+id/iv_main_bg2"
	    android:layout_width="fill_parent"
	    android:layout_height="10dp"
	    android:layout_below="@id/common_top"
	    android:background="@drawable/activity_main_bg_top2"/>
</RelativeLayout>